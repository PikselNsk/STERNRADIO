<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="70dp"
    android:layout_height="match_parent"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <com.suke.widget.SwitchButton

        android:id="@+id/alarm_switcher"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        app:sb_background="@color/transparent"
        app:sb_button_color="#eeeeee"
        app:sb_checked_color="@color/white"
        app:sb_checkline_color="#34b634"
        app:sb_effect_duration="0"
        app:sb_enable_effect="false"
        app:sb_uncheck_color="@color/colorAccent"
        app:sb_uncheckcircle_color="@color/colorAccent" />
</LinearLayout>